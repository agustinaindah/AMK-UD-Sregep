<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">

        <TextView
            android:id="@+id/txtFilterAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="#424242"
            android:textSize="18sp"
            android:text="Semua"/>

        <RadioButton
            android:id="@+id/rbAll"
            android:layout_toRightOf="@id/txtFilterAll"
            android:layout_marginLeft="150dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtFilterName"
            android:layout_below="@id/txtFilterAll"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#424242"
            android:textSize="18sp"
            android:text="Nama"/>

        <RadioButton
            android:id="@+id/rbName"
            android:layout_toRightOf="@id/txtFilterName"
            android:layout_marginLeft="157dp"
            android:layout_below="@id/rbAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtFilterSttsEmp"
            android:layout_below="@id/txtFilterName"
            android:layout_marginTop="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#424242"
            android:textSize="18sp"
            android:text="Status Karyawan"/>

        <RadioButton
            android:id="@+id/rbSttsEmp"
            android:layout_toRightOf="@id/txtFilterSttsEmp"
            android:layout_marginLeft="71dp"
            android:layout_below="@id/rbName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</RelativeLayout>