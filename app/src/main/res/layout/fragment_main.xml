<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        style="@style/MatchWrapLayout"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:src="@drawable/logo_sregep"/>

        <TextView
            android:id="@+id/txtLabelDataKaryawan"
            android:layout_below="@id/imgLogo"
            style="@style/MatchWrapLayout"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textColor="#424242"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Aplikasi Management Karyawan"/>

        <android.support.v7.widget.CardView
            android:id="@+id/cardDataKaryawan"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_below="@id/txtLabelDataKaryawan"
            app:cardBackgroundColor="@color/colorPrimaryDark">

            <RelativeLayout
                style="@style/MatchMatchLayout">

                <ImageView
                    android:id="@+id/imgListData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="37dp"
                    android:src="@drawable/ic_user" />

                <TextView
                    android:id="@+id/txtLblListData"
                    style="@style/WrapWrapLayout"
                    android:layout_marginLeft="125dp"
                    android:layout_centerVertical="true"
                    android:text="List Data Karyawan"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardInputKaryawan"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_below="@id/cardDataKaryawan"
            app:cardBackgroundColor="@color/colorPrimaryDark">

            <RelativeLayout
                style="@style/MatchMatchLayout">

                <ImageView
                    android:id="@+id/imgInputData"
                    style="@style/WrapWrapLayout"
                    android:layout_marginLeft="50dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="37dp"
                    android:src="@drawable/ic_add_user" />

                <TextView
                    android:id="@+id/txtLblInputData"
                    android:layout_toRightOf="@id/imgInputData"
                    style="@style/WrapWrapLayout"
                    android:layout_marginLeft="31dp"
                    android:layout_centerVertical="true"
                    android:text="Input Data Karyawan"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

</RelativeLayout>