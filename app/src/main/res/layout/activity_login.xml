<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MatchWrapLayout"
    android:fitsSystemWindows="true">

    <RelativeLayout
        style="@style/MatchMatchLayout"
        android:background="@android:color/white">

        <RelativeLayout
            android:id="@+id/layTextLogin"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/back_login">

            <TextView
                android:id="@+id/txtLabelLogin"
                style="@style/WrapWrapLayout"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="64dp"
                android:text="Aplikasi Management Karyawan"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="54dp"
                android:src="@drawable/logo_sregep" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layFormLogin"
            style="@style/MatchWrapLayout"
            android:layout_below="@id/layTextLogin"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="50dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:id="@+id/layLogin"
                style="@style/MatchWrapLayout"
                android:gravity="center"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inputUsername"
                    style="@style/MatchWrapLayout"
                    android:layout_below="@+id/inputName">

                    <EditText
                        android:id="@+id/edtUsername"
                        style="@style/AppTheme.EditTextMaterial"
                        android:hint="@string/username" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inputPassword"
                    style="@style/MatchWrapLayout"
                    android:layout_below="@+id/inputUsername"
                    android:layout_marginTop="15dp"
                    app:passwordToggleEnabled="true">

                    <EditText
                        android:id="@+id/edtPassword"
                        style="@style/AppTheme.EditTextMaterial"
                        android:hint="@string/password"
                        android:inputType="textPassword" />

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btnLogin"
                style="@style/MatchWrapLayout"
                android:layout_below="@+id/layLogin"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60dp"
                android:text="@string/label_login"
                android:textColor="@android:color/white"
                android:textSize="17sp"
                android:theme="@style/ButtonColoredPrimary" />

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>

