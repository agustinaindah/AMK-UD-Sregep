        <android.support.v7.widget.CardView
            android:id="@+id/cardFilter"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            app:cardBackgroundColor="@android:color/white">

            <ImageView
                android:id="@+id/imgFilter"
                style="@style/WrapWrapLayout"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/ic_filter" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardSearch"
            android:layout_toRightOf="@id/cardFilter"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/edtSearch"
                style="@style/MatchWrapLayout"
                android:background="@android:color/white"
                android:drawableRight="@drawable/ic_search"
                android:drawablePadding="7dp"
                android:hint="Search..."
                android:inputType="text"
                android:maxLength="20"
                android:padding="8dp"
                android:textColor="@android:color/black"
                android:textColorHint="#bdbdbd"
                android:textSize="16sp" />

        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvListEmployee"
        style="@style/MatchMatchLayout"
        android:layout_below="@id/laySearch" />

