<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cfd8dc">

    <RelativeLayout
        android:id="@+id/laySearch"
        style="@style/MatchWrapLayout">

        <ImageButton
            android:id="@+id/imgBtnFilter"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/white"
            android:src="@drawable/ic_filter" />

        <android.support.v7.widget.CardView
            android:id="@+id/cardSearch"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/imgBtnFilter">

            <EditText
                android:id="@+id/edtSearch"
                style="@style/MatchWrapLayout"
                android:background="@android:color/white"
                android:hint="Search..."
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:maxLength="20"
                android:padding="9dp"
                android:textColor="@android:color/black"
                android:textColorHint="#bdbdbd"
                android:textSize="16sp" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardBtnSearch"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/cardSearch"
            android:clickable="true"
            app:cardBackgroundColor="@android:color/white">

            <Button
                android:id="@+id/btnSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/ic_search" />

        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <include layout="@layout/progress_bar" />

    <TextView
        android:id="@+id/txtNoData"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/no_data"
        android:textSize="18sp"
        android:visibility="gone" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvListEmployee"
        style="@style/MatchMatchLayout"
        android:layout_below="@id/laySearch" />

    <include layout="@layout/view_error" />

</RelativeLayout>